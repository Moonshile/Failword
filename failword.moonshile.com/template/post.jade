extends base.jade
block title
  title= post.title
block links
  load('/template/css/post.css')
  load('/template/css/sidebar.css')
block navbar
  li
    a(href="/") 首页
  li
    a(href="/docs") 动态
  li
    a(href="/#download") 获取
block content
  .row
    .primary.col-md-5.col-md-offset-2
      article.post
        header
          h2
            a(href=post.url)= post.title
          .entry-meta
            span
              i.fa.fa-calendar &nbsp;
              | {{ post.date.format('%Y-%m-%d') }}
            if post.tags
              span
                i.fa.fa-tags &nbsp;
                for tag in post.tags
                  a.tag(href="/tags/{{tag}}") &nbsp;{{tag}}
            span.count
              i.fa.fa-book
              | &nbsp;{{post.visits}}
        .entry= post.content
        include include/comments
    include include/sider.html
